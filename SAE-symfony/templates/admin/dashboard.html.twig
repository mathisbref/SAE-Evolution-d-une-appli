{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
<div class="dashboard-container">

    <h1>Dashboard</h1>

    <!-- üìä Statistiques en ligne -->
    <div class="stats-line-container">
        <div class="stats-line">
            <span>Taux d'occupation</span>
            <strong>{{ tauxOccupation|number_format(2) }}%</strong>
        </div>
        <div class="stats-line">
            <span>Taux d'absent√©isme</span>
            <strong>{{ tauxAbsenteisme|number_format(2) }}%</strong>
        </div>
        <div class="stats-line">
            <span>Coach(s) avec le plus de s√©ances :</span>
            <ul>
                {% for coach in coachsProd %}
                    <li>
                        <a href="{{ path('admin', {
                            'crudAction': 'index',
                            'crudControllerFqcn': 'App\\Controller\\Admin\\CoachCrudController',
                            'query': coach.nompre
                        }) }}">
                            {{ coach.nompre }}
                        </a>
                    </li>                
                {% endfor %}
            </ul>
        </div>
        <div class="stats-line">
            <span>Th√®me pr√©f√©r√© :</span>
            <ul>
                {% for theme in bestThemeSeance %}
                    <li>{{ theme.theme_seance }} ({{ theme.nb_seances }} s√©ances)</li>
                {% endfor %}
            </ul>
        </div>
    </div>

</div>


<style>
    /* Conteneur principal */
    .dashboard-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    /* Statistiques en ligne */
    .stats-line-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 30px;
    }

    .stats-line {
        background: #4CAF50;
        color: white;
        border-radius: 8px;
        padding: 20px;
        flex: 1;
        text-align: center;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .stats-line span {
        display: block;
        font-size: 16px;
        margin-bottom: 10px;
    }

    .stats-line strong {
        font-size: 24px;
    }

    .stats-line ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .stats-line li {
        font-size: 16px;
        margin: 5px 0;
    }

    /* Liste des s√©ances populaires */
    .seances-populaires {
        margin-top: 20px;
    }

    .seance-card {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .seance-info {
        font-size: 16px;
    }

    .seance-date {
        font-weight: bold;
        color: #333;
    }

    .seance-coach {
        font-style: italic;
        color: #555;
    }

    .seance-participants {
        font-weight: bold;
        color: #4CAF50;
    }
</style>

{% endblock %}